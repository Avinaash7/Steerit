<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    android:background="#212121"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="#212121"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".CreatePoolBottomSheet">



        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:hint="Destination"
            app:startIconDrawable="@drawable/ic_baseline_my_location_24"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_height="wrap_content">

            <AutoCompleteTextView

                android:textColorHint="@color/white"
                android:layout_margin="5dp"
                android:inputType="none"
                android:id="@+id/destination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Chennai Airport" />


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:hint="Date"
            app:startIconDrawable="@drawable/ic_baseline_calendar_month_24"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_height="wrap_content">

            <AutoCompleteTextView
                android:id="@+id/datepicker"
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:textColor="@color/smokyWhite"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:text="Flexible Pickup Duration"
            android:textSize="20sp"
            android:fontFamily="@font/montserratlight"
            android:layout_height="wrap_content"/>

        <com.google.android.material.slider.RangeSlider
            android:layout_margin="5dp"
            android:id="@+id/rangeslide2"
            android:layout_height="wrap_content"
            app:values="@array/initial_slider_values"
            android:layout_width="match_parent"
            android:valueTo="23.0"
            app:labelBehavior="floating"
            android:stepSize="1.0" />

        <TextView
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:text="Car Type"
            android:textColor="@color/smokyWhite"
            android:textSize="20sp"
            android:fontFamily="@font/montserratlight"
            android:layout_height="wrap_content"/>

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/toggleButton"
            app:selectionRequired="true"
            app:checkedButton="@id/fourseater"
            app:singleSelection="true"
            android:weightSum="2"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:id="@+id/fourseater"
                android:textColor="@color/smokyWhite"
                style="?attr/materialButtonOutlinedStyle"
                android:text="4 Seater"
                android:drawableTop="@drawable/ic_baseline_directions_car_24"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/sixseater"
                android:textColor="@color/smokyWhite"
                android:layout_width="wrap_content"
                android:drawableTop="@drawable/ic_baseline_directions_car_24"
                style="?attr/materialButtonOutlinedStyle"
                android:text="6 Seater"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

        </com.google.android.material.button.MaterialButtonToggleGroup>

        <TextView
            android:textColor="@color/smokyWhite"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:text="Max Pool Size"
            android:textSize="20sp"
            android:fontFamily="@font/montserratlight"
            android:layout_height="wrap_content"/>

        <com.google.android.material.slider.Slider
            android:layout_margin="5dp"
            android:id="@+id/maxpoolsize"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:valueTo="6.0"
            app:labelBehavior="floating"
            android:stepSize="1.0" />
        <TextView
            android:textColor="@color/smokyWhite"
            android:layout_width="match_parent"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="10dp"
            android:text="Maximum number of people you want to accommodate excluding driver "
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="8dp"
            android:layout_marginStart="5dp"
            android:textColor="@color/smokyWhite"
            android:layout_marginEnd="5dp"
            android:layout_width="match_parent"
            android:text="Total Fare Estimate"
            android:textSize="20sp"
            android:fontFamily="@font/montserratlight"
            android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
            android:layout_margin="8dp"
            android:backgroundTint="@color/smokyWhite"
            app:cardElevation="5dp"
            app:cardCornerRadius="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:text="Trip Fare"
                        android:textColor="@color/black"
                        android:layout_marginStart="10dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:text="₹ 1200"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:gravity="end"
                        android:layout_marginEnd="10dp"
                        android:layout_height="wrap_content"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Convenience Fee"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_marginStart="10dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:text="₹ 70"
                        android:gravity="end"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_marginEnd="10dp"
                        android:layout_height="wrap_content"/>


                </LinearLayout>
                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    app:dividerColor="#D3D3D3"
                    app:dividerInsetStart="8dp"
                    app:dividerInsetEnd="8dp"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Total Fare"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_marginStart="10dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:text="₹ 1270"
                        android:gravity="end"
                        android:textSize="18sp"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"/>


                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_marginTop="8dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_width="match_parent"
            android:text="Note"
            android:textColor="@color/smokyWhite"
            android:textSize="20sp"
            android:fontFamily="@font/montserratlight"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginStart="4dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginStart="3dp"
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:src="@drawable/ic_baseline_contact_phone_24"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                app:buttonTint="#1976D2"
                android:layout_marginStart="4dp"

                android:text="Your contact number will be shared to the people who join your pool"
                android:textColor="@color/smokyWhite"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginStart="3dp"
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:src="@drawable/ic_baseline_payment_24"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                app:buttonTint="#1976D2"
                android:layout_marginStart="4dp"

                android:text="If the below checkbox is not checked, your booking will be confirmed whether or not people join your pool"
                android:textColor="@color/smokyWhite"
                android:layout_height="wrap_content"/>


        </LinearLayout>



        <com.google.android.material.checkbox.MaterialCheckBox
            android:layout_width="match_parent"
            app:buttonTint="#1976D2"
            android:layout_marginTop="4dp"
            android:text="Cancel Booking if pool is not filled"
            android:textColor="@color/smokyWhite"
            android:layout_height="wrap_content"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            app:cornerRadius="10dp"
            android:text="Create"
            android:layout_margin="5dp"
            android:layout_height="wrap_content"/>


    </LinearLayout>


</androidx.core.widget.NestedScrollView>
