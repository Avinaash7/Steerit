<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NewuserBottomSheetFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_margin="8dp"
        android:fontFamily="@font/montserratsemibold"
        android:text="Smells like a New User !" />

    <TextView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:id="@+id/descrtv"
        android:fontFamily="@font/montserratregular"
        android:text="Your mobile number is not registered with Steerit. Let's create a new account" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:text="Register"
        android:id="@+id/regibtn"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_margin="8dp"
        android:layout_height="wrap_content"/>

</LinearLayout>